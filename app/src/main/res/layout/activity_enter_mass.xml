<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enter_mass">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/addLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.2"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:weightSum="10"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/creteMessButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round"
                    android:text="Create Mess"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="OR"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"/>

                <EditText
                    android:id="@+id/messIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round3"
                    android:drawableLeft="@drawable/key"
                    android:foregroundTint="@color/colorWhitGray"
                    android:textColor="@color/color1"
                    android:paddingLeft="15dp"
                    android:paddingRight="18dp"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:hint="Enter code"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/color3"
                    android:fontFamily="@font/poppins_regular"
                    tools:ignore="TextFields,UnusedAttribute" />

                <Button
                    android:id="@+id/joinMessWithMessIdButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/akasibutton"
                    android:text="Join mess"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>